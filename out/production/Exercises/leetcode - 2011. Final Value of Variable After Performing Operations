class Solution {
    public int finalValueAfterOperations(String[] operations) {
        /*
        int out = 0;
        for (int i = 0; i < operations.length; i++){
            for (int j=0; j <= 1; j++){
                if (operations[i].charAt(j)=='+' && operations[i].charAt(j+1) == '+') out++;
        else if (operations[i].charAt(j) == '-' && operations[i].charAt(j+1) == '-') out --;
            }
         } return out;
        
        
        
        int out = 0;
        for (int i = 0; i < operations.length; i++){
            for (int j=0; j <= 2; j++){
                if (operations[i].charAt(j)=='+') out++;
        else if (operations[i].charAt(j) == '-' ) out --;
            }
         } return out/2;
        
        */
        
       int out = 0;
        for (int i = 0; i < operations.length; i++){
            if (operations[i].charAt(1) == '+') out++;
            else out--;
        }
        return out;
        
    }
}
