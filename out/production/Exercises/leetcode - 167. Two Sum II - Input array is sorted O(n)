class Solution {
     public static int[] twoSum(int[] numbers, int target) {
        int[] out = new int[2];
        int left = 0;
        int right = numbers.length - 1;

        while (left < right) {
            if (numbers[left] + numbers[right] > target) right--;
            else if (numbers[left] + numbers[right] < target) left++;
            else {
                out[0] = left+1;
                out[1] = right+1;
                return out;
            }
        }
        return out;
    }
}
